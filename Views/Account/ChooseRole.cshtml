@{
    ViewData["Title"] = "ChooseRole";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card p-5 shadow-lg rounded-4 text-center" style="max-width: 500px;">
        <h2 class="mb-4 text-primary fw-bold">Create Your Account</h2>
        <p class="text-muted mb-4">Please select your account type:</p>

        <div class="d-grid gap-3">
            <a  asp-controller="User"  asp-action="RegisterUser" class="btn btn-outline-primary btn-lg fw-bold">
                👤 I'm an Applicant
            </a>

            <a   asp-controller="Recruiter"  asp-action="RegisterRecruiter" class="btn btn-outline-success btn-lg fw-bold">
                🏢 I'm a Recruiter
            </a>
        </div>

        <p class="mt-4 text-secondary small">
            Already have an account? <a asp-action="Login" class="text-decoration-none">Login here</a>
        </p>
    </div>
</div>
