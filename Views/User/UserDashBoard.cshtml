@{

    ViewData["Title"] = "UserDashBoard";
}


<!-- Bootstrap Dashboard Design -->
<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Welcome to Applicant Dashboard</h2>
        <p class="text-muted">
            You are logged in as
            <strong>@Context.Session.GetString("UserEmail")</strong>
        </p>
    </div>

    <!-- Dashboard Cards -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-briefcase-fill text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">View Available Jobs</h5>
                    <p class="text-muted small">Browse and apply for jobs that match your skills.</p>
                    <a asp-action="UserViewPost" asp-controller="PostJob" class="btn btn-outline-primary btn-sm">View Jobs</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text-fill text-success" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">My Applications</h5>
                    <p class="text-muted small">Track your submitted job applications.</p>
                    <a asp-action="MyApplication" asp-controller="PostJob"  class="btn btn-outline-success btn-sm">View Applications</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle text-warning" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Edit Profile</h5>
                    <p class="text-muted small">Update your information and resume details.</p>
                    <a asp-action="UserProfile" asp-controller="User" class="btn btn-outline-warning btn-sm">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-danger px-4" href="@Url.Action("Logout", "Account")">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
</div>

<!-- Optional: Add Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
