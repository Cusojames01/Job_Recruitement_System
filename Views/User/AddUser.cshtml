@{
    ViewData["Title"] = "AddUser";
}
@model Job_Recruitment_System.Models.User
<div class="container mt-5">
    <div class="card p-4 shadow-lg rounded-4" style="max-width: 500px; margin: auto;">
        <h3 class="text-center mb-3 text-primary fw-bold">Applicant Registration</h3>

        <form asp-action="AddUser" method="post">
            <div class="mb-3">
                <label>Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" required />
            </div>
            <div class="mb-3">
                <label>Sex</label>
                <select asp-for="Sex" class="form-control" required>
                    <option value="">--Select Here--</option>
                    <option value="male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>

            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
            </div>

            <div class="mb-3">
                <label>Contact</label>
                <input asp-for="Contact" class="form-control" placeholder="Enter contact number" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Register</button>
        </form>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success mt-3">@ViewBag.Message</div>
        }

        <div class="text-center mt-3">
            <a asp-action="UserView" asp-controller="User" class="text-decoration-none">← Back</a>
        </div>
    </div>
</div>
