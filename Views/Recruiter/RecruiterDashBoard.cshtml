@{
    ViewData["Title"] = "RecruiterDashBoard";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">Welcome to Recruiter Dashboard</h2>
        <p class="text-muted">
            Logged in as <strong>@Context.Session.GetString("UserEmail")</strong>
        </p>
    </div>

    <div class="row">
        <!-- Post Job -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-person-lines-fill text-success" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Post a Job</h5>
                    <p class="text-muted small">Create a new job opening for applicants.</p>
                    <a href="@Url.Action("PostJob", "PostJob")" class="btn btn-outline-success btn-sm">Post Job</a>
                </div>
            </div>
        </div>

        <!-- View Applicants -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">View Applicants</h5>
                    <p class="text-muted small">Check all applicants who applied to your job posts.</p>
                    <a href="@Url.Action("ViewApplicants", "Recruiter")" class="btn btn-outline-primary btn-sm">View Applicants</a>
                </div>
            </div>
        </div>

        <!-- View Job Posts -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-briefcase-fill text-info" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">View Job Posts</h5>
                    <p class="text-muted small">See all your active and past job postings.</p>
                    <a href="@Url.Action("JobList", "PostJob")" class="btn btn-outline-info btn-sm">View Posts</a>
                </div>
            </div>
        </div>

        <!-- Edit Profile -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm border-0 h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-pencil-square text-warning" style="font-size: 2rem;"></i>
                    <h5 class="mt-3">Profile</h5>
                    <p class="text-muted small">View an Update  your company information and contact details.</p>
                    <a href="@Url.Action("RecruiterProfile", "Recruiter")" class="btn btn-outline-warning btn-sm">View Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-danger px-4" href="@Url.Action("Logout", "Account")">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
